<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>Processor6502.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date %level %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASSEMBLY-LOG" class="ch.qos.logback.core.FileAppender">
        <file>assembly.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="TOKEN" class="ch.qos.logback.core.FileAppender" >
        <file>Processor6502-token.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date %level %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.udsl.processor6502.application.Main" level="info" additivity="true">
        <appender-ref ref="ASSEMBLY-LOG" />
    </logger>

    <logger name="com.udsl.processor6502.assembler.TokeniserV1" level="debug" additivity="false">
        <appender-ref ref="TOKEN" />
        <appender-ref ref="STDOUT" />
    </logger>
    
    <logger name="com.udsl.processor6502.assembler" level="debug" additivity="false">
        <appender-ref ref="TOKEN" />
    </logger>

    <logger name="com.udsl.processor6502.assembler" level="info">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>